extends layout
block content
    div.container
        a(href='/', target='_parent', id='BackButton').btn.btn-primary Go back!
        h1.orderview Order View
        table.table.table-striped.table-hover.table-bordered
            thead
                tr
                    th ID
                    th Date
                    th Name
                    th Address
                    th Edit  /  Delete
            tbody
            each order in orders
                tr
                    td
                        a(href='/orders/' + order._id) #{order._id}
                    td
                        p #{order.orderDate}
                    td
                        p #{order.shipName}
                    td
                        p #{order.shipAddress}
                    td
                        //button.btn.btn-info(type='button', id="editbutton")
                            //span.glyphicon.glyphicon-comment
                        button.btn.btn-info(type='button', data-toggle='modal', data-target='#myModal', id="editbutton")
                            span.glyphicon.glyphicon-comment
                        button.btn.btn-info(type='button', id="deletebutton")
                            span.glyphicon.glyphicon-trash

        #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal')
                            span(aria-hidden='true') Ã—
                            span.sr-only Close
                        h4#myModalLabel.modal-title Edit order
                    .modal-body
                        p This is the body. Here should be some text fields, and an ajax post call when hitting save
                    .modal-footer
                        button.btn.btn-default(type='button', data-dismiss='modal') Close
                        button.btn.btn-primary(type='button') Save changes

