extends layout
block content
    div.container
        a(href='/', target='_parent', id='BackButton').btn.btn-primary Go back!
        h1.orderview Order View
        table.table.table-striped.table-hover.table-bordered
            thead
                tr
                    th ID
                    th Date
                    th Name
                    th Address
                    th Edit  /  Delete
            tbody
            each order in orders
                tr
                    td
                        a(href='/orders/' + order._id) #{order._id}
                    td
                        p #{order.orderDate}
                    td
                        p #{order.shipName}
                    td
                        p #{order.shipAddress}
                    td
                        //button.btn.btn-info(type='button', id="editbutton")
                            //span.glyphicon.glyphicon-comment
                        button.btn.btn-info(type='button', data-toggle='modal', data-target='#editModal', id="editbutton")
                            span.glyphicon.glyphicon-comment
                        button.btn.btn-info(type='button',data-toggle='modal', data-target='#deleteModal', id="deletebutton")
                            span.glyphicon.glyphicon-trash

        #editModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal')
                            span(aria-hidden='true') ×
                            span.sr-only Close
                        h4#myModalLabel.modal-title Edit order
                    .modal-body
                        .input-group    
                            input.form-control(type='text', placeholder='Username')
                    .modal-footer
                        button.btn.btn-primary(type='button', data-dismiss='modal') No
                        button.btn.btn-danger(type='button') Yes
        #deleteModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal')
                            span(aria-hidden='true') ×
                            span.sr-only Close
                        h4#myModalLabel.modal-title Delete order
                    .modal-body
                        p You are about to delete an order. Are you sure you want to proceed?
                    .modal-footer
                        button.btn.btn-primary(type='button', data-dismiss='modal') No
                        button.btn.btn-danger(type='button') Yes

