extends layout
block content
    div.container
        a(href='/', target='_parent', id='BackButton').btn.btn-primary Go back!
        h1 View Customers
        table.table.table-striped.table-hover.table-bordered
            thead
                tr
                    th ID
                    th Company
                    th Country
                    th Phone
            tbody
            each customer in customers
                tr
                    td
                        a(href='/customers/' + customer._id) #{customer._id}
                    td
                        p #{customer.companyName}
                    td
                        p #{customer.country}
                    td
                        p #{customer.phone}
        a(href='/orders', target='_parent').btn.btn-primary
            span.glyphicon.glyphicon-arrow-left &nbsp;Back