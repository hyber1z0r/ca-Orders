extends layout
block content
    div.container
        a(href='/', target='_parent', id='BackButton').btn.btn-primary Go back!
        h1 View Customers
        table.table.table-striped.table-hover.table-bordered
            thead
                tr
                    th ID
                    th Company
                    th Country
                    th Phone
                    th Edit / Delete
            tbody
            each customer in customers
                tr
                    td
                        a(href='/customers/' + customer._id) #{customer._id}
                    td
                        p #{customer.companyName}
                    td
                        p #{customer.country}
                    td
                        p #{customer.phone}
                    td
                        button.btn.btn-info(type='button', data-toggle='modal', data-target='#editModal', class="editbutton")
                            span.glyphicon.glyphicon-comment
                        button.btn.btn-info(type='button',data-toggle='modal', data-target='#deleteModal', class="deletebutton", rowid=customer._id)
                            span.glyphicon.glyphicon-trash
