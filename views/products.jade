extends layout
block content
    div.container
        a(href='/', target='_parent', id='BackButton').btn.btn-primary Go back!
        h1 View Products
        table.table.table-striped.table-hover.table-bordered
            thead
                tr
                    th ID
                    th Name
                    th Category
                    th Unit price
                    th Edit / Delete
            tbody
            each product in products
                tr
                    td
                        p #{product._id}
                    td
                        a(href='/products/' + product._id) #{product.name}
                    td
                        a(href='/categories/' + product.category._id) #{product.category.name}
                    td
                        p #{product.unitPrice}
                    td
                        button.btn.btn-info(type='button', data-toggle='modal', data-target='#editModal', class="editbutton")
                            span.glyphicon.glyphicon-comment
                        button.btn.btn-info(type='button',data-toggle='modal', data-target='#deleteModal', class="deletebutton", rowid=products._id)
                            span.glyphicon.glyphicon-trash
